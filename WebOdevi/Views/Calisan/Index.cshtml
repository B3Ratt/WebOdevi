@using Microsoft.AspNetCore.Identity
@inject UserManager<Kullanici> UserManager

<h2>Çalışanlar</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Yeni Çalışan Ekle</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Pozisyon</th>
            @if (User.IsInRole("Admin"))
            {
                <th>İşlemler</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Id</td>
                <td>@calisan.Ad</td>
                <td>@calisan.Soyad</td>
                <td>@calisan.Pozisyon</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@calisan.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@calisan.Id">Sil</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

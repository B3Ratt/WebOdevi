@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="full-page-image">
    <!-- Hoşgeldiniz mesajı -->
    <div class="welcome-message">
        <h1>@ViewData["WelcomeMessage"]</h1>
    </div>

    <!-- Berberin adı -->
    <div class="berber-ad">
        <h2>@ViewData["BerberAd"]</h2>
    </div>

    <!-- Görsel -->
    <img src="@ViewData["ImageUrl"]" alt="Berber Görseli" class="background-image" />
</div>

<!-- Stil Kodları -->
<style>
    /* Tüm sayfayı kaplayan görsel */
    .full-page-image {
        position: relative;
        height: 100vh; /* Görselin tüm ekranı kaplamasını sağlar */
        width: 100%;
        background-color: #f2f2f2; /* Eğer görsel yüklenmezse arka plan rengi */
        background-image: url('@ViewData["ImageUrl"]');
        background-size: cover;
        background-position: center;
    }

    /* Hoşgeldiniz mesajı (Ekranın en üstünde) */
    .welcome-message {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        font-size: 72px; /* Büyük font */
        color: #1e3a8a; /* Lacivert */
        text-align: center;
        font-weight: bold;
        margin-top: 20px; /* Üstten biraz boşluk bırakmak için */
    }

    /* Berberin adı (Görselin ortasında) */
    .berber-ad {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Tam ortada */
        font-size: 96px; /* Çok büyük font */
        color: white;
        font-weight: bold;
        text-align: center;
    }

    /* Görsel altındaki yazının görünürlüğü */
    .background-image {
        display: none; /* Görseli gizleyelim, çünkü arka plan olarak kullanıyoruz */
    }
</style>

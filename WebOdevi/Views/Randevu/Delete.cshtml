@model WebOdevi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevu Sil</h1>

<h3>Bu randevuyu silmek istediğinizden emin misiniz?</h3>

<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı
        </dt>
        <dd class="col-sm-10">
            @Model.Kullanici.AdSoyad
        </dd>
        <dt class="col-sm-2">
            Berber
        </dt>
        <dd class="col-sm-10">
            @Model.Berber.Ad + @Model.Berber.Soyad
        </dd>
        <dt class="col-sm-2">
            Tarih
        </dt>
        <dd class="col-sm-10">
            @Model.Tarih.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Başlangıç Saati
        </dt>
        <dd class="col-sm-10">
            @Model.BaslangicSaati
        </dd>
        <dt class="col-sm-2">
            Bitiş Saati
        </dt>
        <dd class="col-sm-10">
            @Model.BitisSaati
        </dd>
        <dt class="col-sm-2">
            İşlem
        </dt>
        <dd class="col-sm-10">
            @Model.Islem
        </dd>
        <dt class="col-sm-2">
            Ücret
        </dt>
        <dd class="col-sm-10">
            @Model.Ucret
        </dd>
        <dt class="col-sm-2">
            Durum
        </dt>
        <dd class="col-sm-10">
            @Model.Durum
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
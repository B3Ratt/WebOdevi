@model IEnumerable<WebOdevi.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<h1>Randevu Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Randevu Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Berber</th>
            <th>Tarih</th>
            <th>Başlangıç Saati</th>
            <th>Bitiş Saati</th>
            <th>İşlem</th>
            <th>Ücret</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Kullanici.AdSoyad</td>
                <td>@randevu.Berber.Ad</td>
                <td>@randevu.Tarih.ToShortDateString()</td>
                <td>@randevu.BaslangicSaati</td>
                <td>@randevu.BitisSaati</td>
                <td>@randevu.Islem</td>
                <td>@randevu.Ucret</td>
                <td>@randevu.Durum</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@randevu.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@randevu.Id" class="btn btn-info">Detaylar</a>
                    <form asp-action="Delete" asp-route-id="@randevu.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>